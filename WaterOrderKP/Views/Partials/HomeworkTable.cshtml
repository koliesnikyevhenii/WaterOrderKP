@model CountriesInfo
@{
    Layout = null;
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Country</th>
            <th scope="col">Capital</th>
        </tr>
    </thead>
    @if (Model != null)
    {
        <tbody>
            <tr>
                <th scope="col">@Model.country</th>
                <th scope="col">@Model.city</th>
            </tr>
        </tbody>
    }
</table>